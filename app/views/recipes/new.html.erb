<%= form_for @recipe do |f|%>
    <label>Recipe Title:</label>
    <%= f.text_field :title %>

    <%=f.fields_for :ingredients do |form| %>
        <%=form.label :name%>
        <%=form.text_field :name%>
        <%=form.label :quantity%>
        <%=form.text_field :quantity%>
<%end%>

<%=f.submit%>
<%end%>
